{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LintSuggestion",
  "type": "object",
  "required": [
    "suggestions"
  ],
  "properties": {
    "suggestions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "rule_id",
          "message",
          "range",
          "action"
        ],
        "properties": {
          "rule_id": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "range": {
            "type": "object",
            "properties": {
              "start": {
                "type": "integer"
              },
              "end": {
                "type": "integer"
              }
            }
          },
          "action": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "replace",
                  "insert_before",
                  "insert_after",
                  "delete"
                ]
              },
              "text": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}