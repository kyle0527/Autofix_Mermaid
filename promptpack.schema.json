{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PromptPack",
  "type": "object",
  "required": [
    "version",
    "prompts"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "prompts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "prompt_id",
          "intent",
          "input_type",
          "template"
        ],
        "properties": {
          "prompt_id": {
            "type": "string"
          },
          "intent": {
            "type": "string"
          },
          "input_type": {
            "type": "string"
          },
          "template": {
            "type": "string"
          },
          "schema_ref": {
            "type": "string"
          },
          "system_instructions": {
            "type": "string"
          }
        }
      }
    }
  }
}