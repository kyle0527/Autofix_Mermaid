{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Mermaid Issue Test Case",
  "type": "object",
  "required": ["id", "title", "diagramType", "source", "cases"],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "diagramType": { "type": "string" },
    "labels": { "type": "array", "items": { "type": "string" } },
    "source": { "type": "string" },
    "notes": { "type": "string" },
    "cases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "input", "expect"],
        "properties": {
          "name": { "type": "string" },
          "config": { "type": "object" },
          "input": { "type": "string" },
          "mode": { "type": "string", "enum": ["baseline", "mender", "auto"] },
          "expect": {
            "type": "object",
            "properties": {
              "renderOk": { "type": "boolean" },
              "contains": { "type": "array", "items": { "type": "string" } },
              "notContains": { "type": "array", "items": { "type": "string" } },
              "errorIncludes": { "type": "array", "items": { "type": "string" } },
              "snapshotKey": { "type": "string" }
            }
          },
          "tags": { "type": "array", "items": { "type": "string" } },
          "ruleSuggestion": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "matcher": { "type": "string" },
              "fix": { "type": "string" },
              "appliesTo": { "type": "array", "items": { "type": "string" } },
              "severity": { "type": "string", "enum": ["warn", "error"] }
            }
          }
        }
      }
    }
  }
}
